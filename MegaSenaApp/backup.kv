<MainScreen>:

    MDBoxLayout:
        orientation: "vertical"
        padding: 30
        spacing: 20

        # Header
        MDLabel:
            text: "SeisDaSorte"
            halign: "center"
            font_style: "H4"
            size_hint_y: None
            height: 80

        # Flexible Spacer
        Widget:
            size_hint_y: 1

        # Card Section
        MDCard:
            size_hint: 0.9, None
            height: 260
            pos_hint: {"center_x": 0.5}
            radius: [30]
            elevation: 6
            padding: 20

            MDGridLayout:
                cols: 3
                spacing: 20

                BallLabel:
                    text: str(root.numbers[0])
                BallLabel:
                    text: str(root.numbers[1])
                BallLabel:
                    text: str(root.numbers[2])
                BallLabel:
                    text: str(root.numbers[3])
                BallLabel:
                    text: str(root.numbers[4])
                BallLabel:
                    text: str(root.numbers[5])

        # Flexible Spacer
        Widget:
            size_hint_y: 1

        # Button
        MDRaisedButton:
            text: "Gerar Números Aleatórios"
            size_hint_x: 0.9
            pos_hint: {"center_x": 0.5}
            height: 55
            size_hint_y: None
            on_release: root.generate_random()