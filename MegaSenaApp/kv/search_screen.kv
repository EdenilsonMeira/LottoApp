<SearchScreen>:

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "assets/Background.png"

    # ðŸ”µ TOP CONTENT
    MDBoxLayout:
        orientation: "vertical"
        padding: 20, 20, 20, 20
        spacing: 20
        size_hint: 1, None
        height: self.minimum_height
        pos_hint: {"top": 1}

        Widget:
            size_hint_y: None
            height: 20

        Image:
            source: "assets/pesquisa.png"
            size_hint_y: None
            height: 180
            allow_stretch: True
            keep_ratio: True

        # First card 
        MDCard:
            size_hint: 0.9, None
            height: 500
            pos_hint: {"center_x": 0.5}
            md_bg_color: 1, 1, 1, 1
            elevation: 2
       
        Widget:
            size_hint_y: None
            height: 20
        
        # This boxlayout is on the top of the card
        BoxLayout:
            orientation: "vertical"
            padding: 80

            MDLabel:
                text: "Buscar Datas de Sorteio"
                halign: "left"
                valign: "top"
                text_size: self.size
                theme_text_color: "Primary"
                text_color: 1, 1, 1, 1
                font_size: dp(16)

            Widget:
                size_hint_y: None
                height: 60

            MDLabel:
                text: "Entrar data de pesquisa (dd/mm/aaaa):"
                halign: "left"
                valign: "top"
                text_size: self.size
                theme_text_color: "Primary"
                text_color: 1, 1, 1, 1
                font_size: dp(14)

            Widget:
                size_hint_y: None
                height: 20
            
            MDTextField:
                hint_text: "dd/mm/aaaa"

            Widget:
                size_hint_y: None
                height: 20

            MDLabel:
                text: "Pesquisar por Resultados"
                halign: "left"
                valign: "top"
                text_size: self.size
                theme_text_color: "Primary"
                text_color: 1, 1, 1, 1
                font_size: dp(14)
            
            Widget:
                size_hint_y: None
                height: 20
            
            MDTextField:
                hint_text: "XX XX XX XX XX XX"  

        # Second card
        MDCard:
            size_hint: 0.9, None
            height: 380
            pos_hint: {"center_x": 0.5}
            md_bg_color: 1, 1, 1, 1
            elevation: 2
        
        #Include another boxlayout here
        ########
        
        # Third card
        MDCard:
            size_hint: 0.9, None
            height: 380
            pos_hint: {"center_x": 0.5}
            md_bg_color: 1, 1, 1, 1
            elevation: 2
        
        #Include another boxlayout here
        ########
    

    # Buttons
    BoxLayout:
        orientation: "vertical"
        padding: 350
        
        # Search Button (overlapping the cards)     
        MDRaisedButton:
            text: "Pesquisar"
            font_size: 48
            size_hint: None, None
            size: 250,80
            # pos_hint: {"x": 0.05, "y": 0.05}
            elevation: 0
            on_release: root.manager.current = "main"

            md_bg_color: 0, 0, 0, 0
            text_color: 1, 1, 1, 1

            canvas.before:
                Color:
                    rgba: 0.08, 0.38, 0.9, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [45]

    BoxLayout:
        orientation: "horizontal"
        padding: 20
        spacing: 100
        
        # ðŸ”µ LEFT BUTTON
        MDRaisedButton:
            text: "Gerar NÃºmeros"
            font_size: 48
            size_hint: None, None
            size: 250, 80
            pos_hint: {"x": 0.05, "y": 0.05}
            elevation: 0
            on_release: root.manager.current = "main"

            md_bg_color: 0, 0, 0, 0
            text_color: 1, 1, 1, 1

            canvas.before:
                Color:
                    rgba: 0.08, 0.38, 0.9, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [45]
        # This widget is used to maintain the right space between the two buttons
        Widget:
            size_hint_x: None
            width: 10

        # ðŸ”µ RIGHT BUTTON
        MDRaisedButton:
            text: "EstatÃ­sticas"
            font_size: 48
            size_hint: None, None
            size: 250, 80
            pos_hint: {"right": 0.95, "y": 0.05}
            elevation: 0
            on_release: root.manager.current = "stats"

            md_bg_color: 0, 0, 0, 0
            text_color: 1, 1, 1, 1

            canvas.before:
                Color:
                    rgba: 0.08, 0.38, 0.9, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [45]
