<StatsScreen>:

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "assets/Background.png"

    FloatLayout:

        # ðŸ”µ TOP CONTENT
        MDBoxLayout:
            orientation: "vertical"
            padding: 20, 20, 20, 20
            spacing: 20
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: {"top": 1}

            Widget:
                size_hint_y: None
                height: 20

            Image:
                source: "assets/stats.png"
                size_hint_y: None
                height: 250
                allow_stretch: True
                keep_ratio: True

            Widget:
                size_hint_y: None
                height: 20


        # ðŸ”µ LEFT BUTTON
        MDRaisedButton:
            text: "Gerar NÃºmeros"
            font_size: 48
            size_hint: None, None
            size: 250, 80
            pos_hint: {"x": 0.05, "y": 0.05}
            elevation: 0
            on_release: root.manager.current = "main"

            md_bg_color: 0, 0, 0, 0
            text_color: 1, 1, 1, 1

            canvas.before:
                Color:
                    rgba: 0.08, 0.38, 0.9, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [45]


        # ðŸ”µ RIGHT BUTTON
        MDRaisedButton:
            text: "Pesquisa"
            font_size: 48
            size_hint: None, None
            size: 250, 80
            pos_hint: {"right": 0.95, "y": 0.05}
            elevation: 0
            on_release: root.manager.current = "search"

            md_bg_color: 0, 0, 0, 0
            text_color: 1, 1, 1, 1

            canvas.before:
                Color:
                    rgba: 0.08, 0.38, 0.9, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [45]
